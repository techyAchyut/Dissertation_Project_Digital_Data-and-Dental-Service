<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" data-dismiss="modal" aria-hidden="true" class="close"><span
                    class="mdi mdi-close"></span></button>
        </div>
        <div class="modal-body">
            <form action="/admin/appointment/{{ appointment.id }}/update" id="hospitalUpdate">
                <input type="hidden" name="approved" value="1">
                <div class="text-center">
                    <div class="text-success"><span class="modal-main-icon mdi mdi-check"></span></div>
                    <h3>Are you sure you want to approve this appointment?</h3>
                    <h4>Client : {{appointment.name}}</h4>
                    <h4>Date : {{date appointment.date}}</h4>
                    <div class="xs-mt-50">
                        <button type="button" data-dismiss="modal" class="btn btn-space btn-default">Cancel</button>
                        <button type="submit" class="btn btn-space btn-success">Approve</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>